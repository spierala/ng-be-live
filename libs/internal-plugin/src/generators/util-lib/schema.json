{
  "$schema": "http://json-schema.org/schema",
  "cli": "nx",
  "$id": "UtilLib",
  "title": "",
  "type": "object",
  "properties": {
    "name": {
      "type": "string",
      "description": "",
      "$default": {
        "$source": "argv",
        "index": 0
      },
      "x-prompt": "What name would you like to use?"
    },
    "tags": {
      "type": "string",
      "description": "Add tags to the project (used for linting)",
      "alias": "t"
    }, 
    "directory": {
      "type": "string",
      "description": "Which folder name?",
      "x-prompt": {
        "message": "msg: Which folder name?",
        "type": "list",
        "items": [
          "store", 
          "api",
          "shared"
        ]
      }
    }
  },
  "required": ["name"]
}
